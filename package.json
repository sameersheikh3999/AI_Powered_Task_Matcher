{
  "name": "skillsync-ai-task-matcher",
  "version": "1.0.0",
  "description": "AI-Powered Task Matcher for Personal Growth",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint"
  },
  "keywords": [
    "ai",
    "task-matching",
    "personal-growth",
    "skill-development",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/skillsync-ai-task-matcher.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/skillsync-ai-task-matcher/issues"
  },
  "homepage": "https://github.com/yourusername/skillsync-ai-task-matcher#readme"
} 